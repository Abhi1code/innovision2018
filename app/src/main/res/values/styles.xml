<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sign_in_up_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/sign_in_up_colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="landing_page_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/landing_page</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
